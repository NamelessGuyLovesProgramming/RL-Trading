[flake8]
# flake8 Configuration f√ºr RL Trading

# Maximum Line Length (align with black)
max-line-length = 100

# Exclude Directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    charts/__pycache__,
    src/__pycache__

# Ignore specific errors
ignore =
    E203,  # whitespace before ':' (conflicts with black)
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (conflicts with black)
    E402,  # module level import not at top of file (sometimes necessary)

# Show source code for errors
show-source = True

# Show pep8 error codes
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True
